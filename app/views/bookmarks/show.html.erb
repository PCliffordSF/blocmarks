
 <div class="row">
   <div class="col-md-8">
    <% @img_url = '"' +  @preview + '"'  %>
    <%= @img_url %>
    <img alt="Icon" class="menu_icon" src=" + @img_url + "/>
     <h3><%= @bookmark.url %></h3>
     <small class="underline">
       submitted <%= time_ago_in_words(@bookmark.created_at) %> ago 
     </small>
     <br>
     <% if policy(@bookmark).update? %>
      <%= link_to "Edit Bookmark", edit_bookmark_path(@bookmark.id), class: 'btn btn-success' %>
     <% end %>
     <%= link_to "Exit", topic_path(@bookmark.topic_id), class: 'btn btn-warning' %>
     <br>
   </div>
 </div>